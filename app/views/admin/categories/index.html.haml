.row
  .span12
    .block_content.container
      .products_list{:style => "margin:0 20px;"}
        %h3
          Категории
          %a.btn.btn-small{:href => new_admin_category_path}
            %i.icon-plus
            Добавить
        = paginate @categories
        %table.table.table-hover
          %thead
            %th #
            %th Название
            %th Описание
            %th Действия
          %tbody
            - if @categories
              - @categories.each do |category|
                %tr
                  %td= category.id
                  %td= category.name
                  %td= category.text
                  %td
                    %a{:href => edit_admin_category_path(category)}
                      %i.icon-edit
                    %a{:href => admin_category_path(category), :data => {:method => "delete", :confirm => "Действительно удалить категорию #{category.name}?"}}
                      %i.icon-remove

        = paginate @categories