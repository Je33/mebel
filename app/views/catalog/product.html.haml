.row
  .span12
    %ul.breadcrumb
      %li
        %a{:href => "/"}
          %i.icon-home
        %span.divider /
      %li
        %a{:href => "/catalog/index"}
          Каталог мебели
        %span.divider /
      %li.active= @product.category ? @product.category.name : ""
.row
  .span5
    %h2.clear-margin-top
      = @product.name
    .tag.tag-big
      от #{@product.price.to_i} p.

      -#%span.label.label-important
        По акции
      -#%span.label.label-warning
        Распродажа
      -#%span.label.label-info
        Новый


    - if @product.text
      - prms = @product.text.split "\r\n"
      %table.table.table-hover
        %tbody
          - prms.each do |prm|
            - kv = prm.split ":"
            - if !kv[0].blank? and !kv[1].blank?
              %tr
                %td
                  %strong
                    = kv[0].strip
                %td= kv[1].strip

    -#%table.table.table-hover
      %thead
        %tr
          %th.collspan3
            Дополнительно:
      %tbody
        %tr
          %td
            Зеркало
          %td
            1500 р
          %td
            .btn.btn-link + добавить
        %tr
          %td
            Дополнительная подушка
          %td
            500 р
          %td
            .btn.btn-link + добавить


  .span7

    - link = @product.product_textures.where(:as_img => 1).first
    - if link.present?
      %button.btn.btn-success.btn-block.buy_img
        #{link.price.to_i} р.
        Заказать как на картинке
      %span.label.label-info.btn-block Ткань #{link.texture.name}
    %ul.thumbnails
      - if @product.photos.exists?
        - @product.photos.each_with_index do |f, k|
          - if k == 0
            %li.span7
              %a.thumbnail{:href => "javascript:;"}
                %img{:alt => "", :src => f.file.url(:x), :width => '100%'}/
          - else
            %li.span2
              %a.thumbnail{:href => "javascript:;"}
                %img{:alt => "", :src => f.file.url(:m), :width => '100%'}/

